<h1>ツブヤキ一覧</h1>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to "編集する", edit_post_path(post.id) %></td>
    <td><%= link_to '削除する', post_path(post.id), method: :delete %></td>
  </tr>
<% end %>
</table>
<br>
<%= button_to 'ツブヤく', { controller: 'posts', action: 'new' }, { method: :get, class: "btn-primary btn-lg"} %>
<%= javascript_pack_tag 'greet', 'data-turbolinks-track': 'reload' %> 